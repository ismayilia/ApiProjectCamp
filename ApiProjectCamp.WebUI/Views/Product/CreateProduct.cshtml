@model CreateProductDto

@{
	ViewData["Title"] = "CreateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
	<div class="section-body">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4>Create Product Page</h4>
					</div>
					<div class="card-body">
						<form method="post">
							<label asp-for="ProductName">Product Name</label>
							<input type="text" asp-for="ProductName" class="form-control" />
							<br>
							<label asp-for="Price">Product Price</label>
							<input type="text" asp-for="Price" class="form-control" />
							<br>
							<label asp-for="CategoryId">Product Categories</label>
							<select asp-for="CategoryId" asp-items="ViewBag.v" class="form-control" required>
								<option value=""> Choose</option>
							</select>
							<br>
							<label asp-for="ImageUrl">Product Image</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br>
							<label asp-for="ProductDescription">Product Description</label>
							<textarea class="form-control" asp-for="ProductDescription" rows="5"></textarea>
							<br>
							<button class="btn btn-primary">Create Category</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


